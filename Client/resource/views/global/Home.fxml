<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="container" prefHeight="600.0" prefWidth="300.0" style="-fx-background-color: #9D7E68;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <VBox alignment="TOP_CENTER" prefHeight="175.0" prefWidth="300.0" spacing="15.0">
         <children>
            <ImageView fitHeight="110.0" fitWidth="252.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../img/logo.png" />
               </image>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ImageView>
                <Label alignment="CENTER" prefHeight="28.0" prefWidth="300.0" text="Menu" textFill="WHITE">
                    <font>
                        <Font size="19.0" />
                    </font>
                </Label>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
      <VBox fx:id="mancalaMenu" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text=" Mancala :" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onMouseClicked="#newMatch" prefHeight="40.0" prefWidth="300.0" stylesheets="@Home.css" text="%home.mancala.newmatch">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font name="Helvetica 65 Medium" size="17.0" />
               </font>
            </Button>
            <Button alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onMouseClicked="#stopMatch" prefHeight="40.0" prefWidth="300.0" stylesheets="@Home.css" text="%home.mancala.stopmatch">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font name="Helvetica 65 Medium" size="17.0" />
               </font>
            </Button>
            <Button alignment="BASELINE_LEFT" graphicTextGap="10.0" mnemonicParsing="false" onMouseClicked="#undo" prefHeight="40.0" prefWidth="300.0" stylesheets="@Home.css" text="%home.mancala.undo">
               <padding>
                  <Insets left="20.0" />
               </padding>
               <font>
                  <Font name="Helvetica 65 Medium" size="17.0" />
               </font>
            </Button>
         </children>
      </VBox>
    </children>
</VBox>
